<%= simple_form_for(@unit) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :unit %>
    <%= f.input :conversion %>
    <%= f.association :component %>
    <%= f.association :ingredient %>
    <%= f.association :stock %>
    <%= f.association :order_item %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
